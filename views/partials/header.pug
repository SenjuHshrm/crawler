.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar

      .small-logo-container
        a.small-logo(href='#')
          span.move-text
            |BIG OUTSOURCE
          img(src="/logo-bigoutsource.png")
    .navbar-collapse.collapse
      ul.nav.navbar-nav.navbar-right
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/')
            span.fa.fa-home(aria-hidden='true')
            | Home

        li(class=(title == 'US Crawler') ? 'active' : undefined)
          a(href='/US_Crawler')
            span.fa.fa-gears(aria-hidden='true')
            | US Crawler

        li(class=(title == 'UK Crawler') ? 'active' : undefined)
          a(href='/UK-Crawler')
            span.fa.fa-gears(aria-hidden='true')
            | UK Crawler
